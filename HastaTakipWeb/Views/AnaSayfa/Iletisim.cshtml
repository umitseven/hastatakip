
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_AnaSayfa.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>İletişim</title>

</head>
<body>

    <div class="callcentercontainer">
        <div class="containermarj">
            <div class="callimg">
                <img class="callcenterimg" src="~/web_HastaTakip/img/callcenter.jpg" alt="callcenter">
                <div class="bottomleft"> İletişim <hr style="width: 100%; border: 1px solid rgb(255, 255, 255); opacity: 0.9; margin: 0px;"></div>
            </div>
        </div>
    </div>

    <div class="container5">
        <div class="iletisimbilgileri">
            <div>
                <h1 style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; margin-bottom: 24px; font-weight: bold;">Bize Ulaşın</h1>
                <p style="font-size: 18px; font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; text-align: left;">
                    Size nasıl yardımcı olabiliriz? Herhangi bir sorunuz varsa veya daha fazla bilgiye ihtiyacınız varsa,
                    lütfen iletişim formunu doldurun veya bize doğrudan telefon veya e-posta ile ulaşın. Size yardımcı olmaktan memnuniyet duyarız.
                </p>

                <h4>Saygılarımızla</h4>
                <h4>SEVEN KLİNİK</h4>

                <div class="iletisimiconlar">
                    <img src="~/web_HastaTakip/img/telefon.png" max width="52px">
                    <h6 class="iconbilgi"> 444 444 444</h6>
                </div>
                <div class="iletisimiconlar">
                    <img src="~/web_HastaTakip/img/mail.png" max width="52px">
                    <h6 class="iconbilgi"> sevenklinik.com</h6>
                </div>
            </div>
        </div>
        <form class="formbilgileri" method="post" action="@Url.Action("Iletisim", "AnaSayfa")">
            <div style="margin: 24px;" class="form-floating mb-3">
                <input style="-webkit-box-shadow: none; box-shadow: none;" type="text" class="form-control" id="ad" placeholder="umit" required="" value="" name="ad">
                <label for="ad">adınız</label>
            </div>

            <div style="margin: 24px;" class="form-floating mb-3">
                <input style="-webkit-box-shadow: none; box-shadow: none;" type="text" class="form-control" id="soyad" placeholder="umit" required="" value="" name="soyad">
                <label for="soyad">soyadınız</label>
            </div>

            <div style="margin: 24px;" class="form-floating mb-3">
                <input style="-webkit-box-shadow: none; box-shadow: none;" type="email" class="form-control" id="mail" placeholder="name@example.com" required="" value="" name="mail">
                <label for="mail">E-posta adresiniz</label>
            </div>


            <div style="margin: 24px;" class="form-floating mb-3">
                <textarea style="-webkit-box-shadow: none; box-shadow: none;" class="form-control" placeholder="Buraya bir yorum bırakın" id="mesaj" required="" name="mesaj"></textarea>
                <label for="mesaj">Mesajınız</label>
            </div>

            <div style="margin: 24px;" class="form-floating mb-3">
                <button type="submit" class="logbtn1">Gönder</button>
            </div>
        </form>

    </div>



    <div style="padding: 100px;">

        <div style="width:100%;height:500px;margin-bottom: 36px;">
            <iframe src="https://www.google.com/maps/d/embed?mid=1_QC9JXnBnTwIIXegDME6HmB3SPDyRSc&ehbc=2E312F" width="100%" height="580"></iframe>

        </div>
    </div>





</body>
</html>

