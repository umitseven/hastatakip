
@using HastaTakipWeb.Models.Siniflar
@model List<MuayeneBilgileri>
@{
    ViewBag.Title = "BütünMuayeneBilgileri";
    Layout = "~/Views/Shared/_DoktorHemsireLayout.cshtml";
}

<input style="width: auto !important; float: right; margin-top: 20px; margin-bottom: 40px;" type="text" id="searchInput" class="form-control" placeholder="Hasta Ara...">


<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Hasta Adı</th>
            <th>Hasta Soyadı</th>
            <th>Kimlik Numarası</th>
            <th>Doktor Adı</th>
            <th>Şikayet</th>
            <th>Bulgular</th>
            <th>Tedavi</th>
            <th>Notlar</th>
            <th>Muayene Tarihi</th>
            <th style="vertical-align: middle; text-align: center">Güncelle</th>
            <th style="vertical-align: middle; text-align: center">Sil</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;">
                        @x.HastaAdi
                    </p>
                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.HastaSoyadi
                    </p>
                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.KimlikNumarası
                    </p>
                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.DoktorAdi
                    </p>

                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.Sikayet
                    </p>
                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.Bulgular
                    </p>
                </td>

                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.Tedavi
                    </p>
                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.Notlar
                    </p>
                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.MuayeneTarihi.Date.ToString("dd/MM/yyyy")
                    </p>
                </td>




                <td style="vertical-align: middle; text-align: center"><a href="/Admin/MuayeneGetir/@x.MuayeneId" class="btn btn-primary">güncelle</a></td>
                <td style="vertical-align: middle; text-align: center"><a href="/Admin/MuayeneBilgisiSil/@x.MuayeneId" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>

