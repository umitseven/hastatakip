@model HastaTakipWeb.Models.Siniflar.AnaSayfa
@{
    ViewBag.Title = "AnasayfaGetir2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

@using (Html.BeginForm("AnasayfaGüncelle2", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.id)
    @Html.TextBoxFor(x => x.id, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.bölümresimleri2,"Resim Url")
    @Html.TextBoxFor(x => x.bölümresimleri2, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.bölümadi2,"Başlık")
    @Html.TextBoxFor(x => x.bölümadi2, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.aciklama2,"Açıklama")
    @Html.TextAreaFor(x => x.aciklama2, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Güncelle</button>
}
