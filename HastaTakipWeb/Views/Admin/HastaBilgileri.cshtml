@using HastaTakipWeb.Models.Siniflar
@model List<HastaBilgileri>
@{
    ViewBag.Title = "HastaBilgileri";
    Layout = "~/Views/Shared/_DoktorHemsireLayout.cshtml";
}

<input style="width: auto !important; float: right; margin-top: 20px; margin-bottom: 40px;" type="text" id="searchInput" class="form-control" placeholder="Hasta Ara...">
<a style="margin-bottom:10px !important;margin-top:20px" href="~/Admin/YeniHastaEkle/" class="btn btn-success">Yeni Hasta Kayıt</a>
<a style="margin-bottom:5px !important;margin-top:20px" href="~/Admin/PDFOLUSTUR/" class="btn btn-primary btn-sm">PDF</a>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Cinsiyeti</th>
            <th>Doğum Tarihi</th>
            <th>Telefon Numarası</th>
            <th>Kimlik Numarası</th>
            <th style="vertical-align: middle; text-align: center">Güncelle</th>
            <th style="vertical-align: middle; text-align: center">Sil</th>
            <th style="vertical-align: middle; text-align: center">Hasta Raporu Görüntüle</th>
            <th style="vertical-align: middle; text-align: center">İlaç Bilgileri</th>
            <th style="vertical-align: middle; text-align: center">Muayene Bilgileri</th>
            <th style="vertical-align: middle; text-align: center">Hasta Raporu Ekle</th>
            <th style="vertical-align: middle; text-align: center">İlaç Bilgisi Ekle</th>
            <th style="vertical-align: middle; text-align: center">Muayene Bilgisi Ekle</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;">
                        @x.Ad
                    </p>
                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.Soyad
                    </p>
                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.Cinsiyet
                    </p>

                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.DogumTarihi.Date.ToString("dd/MM/yyyy")
                    </p>
                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.TelefonNumarası
                    </p>
                </td>
                <td style="vertical-align: middle;">
                    <p style="margin: 0;" class="text-wrap">
                        @x.KimlikNumarası
                    </p>
                </td>


                <td style="vertical-align: middle; text-align: center"><a href="/Admin/HastaBilgileriGetir/@x.HastaId" class="btn btn-primary">güncelle</a></td>
                <td style="vertical-align: middle; text-align: center"><a href="/Admin/HastaBilgileriSil/@x.HastaId" class="btn btn-danger">Sil</a></td>
                <td><button class="btn btn-info" onclick="window.location.href='@Url.Action("HastaRaporlariGetir", "Admin", new { kimlikNumarası = x.KimlikNumarası })'">Hasta Raporu Görüntüle</button></td>
                <td><button class="btn btn-info" onclick="window.location.href='@Url.Action("IlacBilgileri", "Admin", new { kimlikNumarası = x.KimlikNumarası })'">İlaç Bilgileri Görüntüle</button></td>
                <td><button class="btn btn-info" onclick="window.location.href='@Url.Action("MuayeneBilgileri", "Admin", new { kimlikNumarası = x.KimlikNumarası })'">Muayene Bilgileri Görüntüle</button></td>
                <td style="vertical-align: middle; text-align: center"><a href="/Admin/HastaRaporEkle/@x.HastaId" class="btn btn-success">Hasta Raporu Ekle</a></td>
                <td style="vertical-align: middle; text-align: center"><a href="/Admin/IlacBilgisiEkle/@x.HastaId" class="btn btn-success">İlaç Bilgisi Ekle</a></td>
                
                <td>
                    <form action="/Admin/MuayeneBilgisiEkle" method="get">
                        <input type="hidden" name="id" value="@x.HastaId" />
                        <button style="vertical-align: middle; text-align: center" class="btn btn-success" type="submit">Muayene Bilgisi Ekle</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>



