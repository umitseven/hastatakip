@using HastaTakipWeb.Models.Siniflar
@model List<Admin>

@{
    ViewBag.Title = "AdminYetkilendirme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<input style="width: auto !important; float: right; margin-top: 20px; margin-bottom: 40px;" type="text" id="searchInput" class="form-control" placeholder="Kullanıcı Ara...">
<a style="margin-bottom:10px !important;margin-top:20px" href="~/Admin/AdminYetkilendirmeEkle/" class="btn btn-success">Yeni Kullanıcı Ekle</a>
<a style="margin-bottom:5px !important;margin-top:20px" href="~/Admin/PDFOLUSTURYönetimPaneli/" class="btn btn-primary btn-sm">PDF</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Şifre</th>
            <th>Ad Soyad</th>
            <th>Yetki</th>
            <th style="vertical-align: middle; text-align: center">Güncelle</th>
            <th style="vertical-align: middle; text-align: center">Sil</th>

        </tr>
    </thead>


    @foreach (var x in Model)
    {
        <tr>
            <td style="vertical-align: middle;">
                <p style="margin: 0;">
                    @x.kullaniciAdi
                </p>
            </td>
            <td style="vertical-align: middle;">
                <p style="margin: 0;" class="text-wrap">
                    @x.sifre
                </p>
            </td>
            <td style="vertical-align: middle;">
                <p style="margin: 0;" class="text-wrap">
                    @x.adSoyad
                </p>
            </td>
            <td style="vertical-align: middle;">
                <p style="margin: 0;" class="text-wrap">
                    @x.Yönetimid
                </p>
            </td>

            <td style="vertical-align: middle; text-align: center"><a href="/Admin/AdminGetir/@x.id" class="btn btn-primary">güncelle</a></td>
            <td style="vertical-align: middle; text-align: center"><a href="/Admin/AdiminYetkilendirmeSil/@x.id" class="btn btn-danger">Sil</a></td>

        </tr>
    }

</table>



