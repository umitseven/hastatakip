@model HastaTakipWeb.Models.Siniflar.DoktorHemsire
@{
    ViewBag.Title = "YeniDoktorHemsireEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Ad)
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Soyad)
    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Uzmanlık,"Uzmanlık Alanı")
    @Html.TextBoxFor(x => x.Uzmanlık, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Poliklinik)
    @Html.TextBoxFor(x => x.Poliklinik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Telefon)
    @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.KimlikNumarası,"Kimlik Numarası")
    @Html.TextBoxFor(x => x.KimlikNumarası, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Ekle</button>

</form>


