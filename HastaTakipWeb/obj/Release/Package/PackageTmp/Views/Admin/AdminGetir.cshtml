@model HastaTakipWeb.Models.Siniflar.Admin
@{
    ViewBag.Title = "AdminGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

@using (Html.BeginForm("AdminYetkilendirmeGüncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.id)
    @Html.TextBoxFor(x => x.id, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.kullaniciAdi,"Kullanıcı Adı")
    @Html.TextBoxFor(x => x.kullaniciAdi, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.sifre,"Şifre")
    @Html.TextBoxFor(x => x.sifre, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.adSoyad,"Ad ve Soyad")
    @Html.TextBoxFor(x => x.adSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Yönetimid,"Yönetim Numarası")
    @Html.TextBoxFor(x => x.Yönetimid, new { @class = "form-control" })

    <p><span style="color:red;">NOT:</span> <span style="color:green;">Yönetim Numarası:1</span> Admin girişi <span style="color:green;">Yönetim Numarası: 3</span> doktor veya hemşire girişi</p>


    <br />
    <button class="btn btn-success">Güncelle</button>
}
